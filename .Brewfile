# git: newer than Apple git
brew "git"

# tmux: terminal multiplexer
brew "tmux"

# tree: show the contents of the current directory as a tree
brew "tree"

# pstree: convenient tool to show running processes as a tree.
brew "pstree"

# jq: json processor
brew "jq"

# watch: periodic monitoring
brew "watch"

# parallel: do parallel job
#           (suitable for few number of big jobs)
#           (not recommended for benchmark because spawning processes is slow)
brew "parallel"

# htop: simple CPU/MEM monitor
brew "htop"

# ripgrep: enhanced parallel grep
brew "ripgrep"

# pigz: Go parallel gzip (de)compression
brew "pigz"
