# Cask packages
#

# communication tool
cask "slack"

# database client
cask "mongodb-compass"

# desktop agent
cask "postman-agent"

# IDE
cask "visual-studio-code"

# internet browser
cask "google-chrome"
cask "chromium"

# Docker for native environment
cask "rancher"

